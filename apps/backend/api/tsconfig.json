{
  "extends": "@dartster/tsconfig/base.json",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./*"]
    },
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/typings"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["dist"]
}
